<h2>Welcome! Please Sign Up!</h2>
<%= form_with model: @user do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br><br>

    <%= f.label :username %><br>
    <%= f.text_field :username %><br><br>

    <%= f.label :password %><br>
    <%= f.password_field :password %><br><br>
<div>
    <%= f.collection_check_boxes :genre_ids, @genres, :id, :name %><br>
</div>
    <%= f.submit 'Sign Up' %>
<% end %>